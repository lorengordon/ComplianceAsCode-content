<def-group>
  

  

  <definition class="compliance" id="service_nfs_disabled" version="1">
    <metadata>
        <title>Disable Network File System (nfs)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The nfs-server service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package nfs-utils removed or service nfs-server is not configured to start" operator="OR">
      <criterion comment="nfs-utils removed" test_ref="test_service_nfs-server_package_nfs-utils_removed" />
      <criteria operator="AND" comment="service nfs-server is not configured to start">
        <criterion comment="nfs-server is not running" test_ref="test_service_not_running_nfs-server" />
        <criterion comment="Property LoadState of service nfs-server is masked" test_ref="test_service_loadstate_is_masked_nfs-server" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitproperty_test id="test_service_not_running_nfs-server" check="all" check_existence="any_exist" comment="Test that the nfs-server service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_nfs-server"/>
    <linux:state state_ref="state_service_not_running_nfs-server"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_nfs-server" comment="Retrieve the ActiveState property of nfs-server" version="1">
    <linux:unit operation="pattern match">^nfs-server\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_nfs-server" version="1" comment="nfs-server is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_nfs-server" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service nfs-server is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_nfs-server"/>
    <linux:state state_ref="state_service_loadstate_is_masked_nfs-server"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_nfs-server" comment="Retrieve the LoadState property of nfs-server" version="1">
    <linux:unit operation="pattern match">^nfs-server\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_nfs-server" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  



  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_nfs-server_package_nfs-utils_removed" version="1"
  comment="package nfs-utils is removed">
    <linux:object object_ref="obj_test_service_nfs-server_package_nfs-utils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_nfs-server_package_nfs-utils_removed" version="1">
    <linux:name>nfs-utils</linux:name>
  </linux:rpminfo_object>


</def-group>


<def-group>
  <definition class="compliance" id="sysctl_kernel_panic_on_oops" version="3">
    <metadata>
        <title>Kernel panic on oops</title>
        
    <affected family="unix">
    <platform>Debian 10</platform>
    </affected>
        <description>The 'kernel.panic_on_oops' kernel parameter should be set to the appropriate value in both system configuration and system runtime.</description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="kernel.panic_on_oops configuration setting check"
                         definition_ref="sysctl_kernel_panic_on_oops_static"/>
      <extend_definition comment="kernel.panic_on_oops runtime setting check"
                         definition_ref="sysctl_kernel_panic_on_oops_runtime"/>
    </criteria>
  </definition>
</def-group><def-group>

<def-group>
  <definition class="compliance" id="sebool_login_console_enabled" version="1">
    <metadata>
        <title>Enable the login_console_enabled SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Oracle Linux 8</platform>
    </affected>
        <description>The SELinux 'login_console_enabled' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="login_console_enabled is configured correctly" test_ref="test_sebool_login_console_enabled" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="login_console_enabled is configured correctly" id="test_sebool_login_console_enabled" version="1">
    <linux:object object_ref="object_sebool_login_console_enabled" />
    <linux:state state_ref="state_sebool_login_console_enabled" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_login_console_enabled" version="1">
    <linux:name>login_console_enabled</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_login_console_enabled" version="1">
    <linux:name>login_console_enabled</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_login_console_enabled"/>
      <linux:pending_status datatype="boolean" var_ref="var_login_console_enabled"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for login_console_enabled" datatype="boolean" id="var_login_console_enabled" version="1" />
  
</def-group>
<def-group>
  <definition class="inventory" id="package_usbguard"
  version="1"><metadata>
        <title>Package usbguard is installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package usbguard should be installed.</description>
    </metadata>
    <criteria>
    
      <criterion comment="Platform package usbguard is installed"
      test_ref="inventory_test_package_usbguard_installed" />
    
    </criteria>
  </definition>


  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="inventory_test_package_usbguard_installed" version="1"
  comment="package usbguard is installed">
    <linux:object object_ref="obj_inventory_test_package_usbguard_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_inventory_test_package_usbguard_installed" version="1">
    <linux:name>usbguard</linux:name>
  </linux:rpminfo_object>
  


</def-group>
<def-group>
  <definition class="compliance" id="file_owner_user_cfg" version="1">
  
    <metadata>
        <title>Verify /boot/grub2/user.cfg User Ownership</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>This test makes sure that /boot/grub2/user.cfg is owned by 0.</description>
    </metadata>
     <criteria>
   
     <criterion comment="Check file ownership of /boot/grub2/user.cfg" test_ref="test_file_owner_user_cfg_0" />
   
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /boot/grub2/user.cfg" id="test_file_owner_user_cfg_0" version="1">
    <unix:object object_ref="object_file_owner_user_cfg_0" />
  </unix:file_test>

  <unix:file_object comment="/boot/grub2/user.cfg" id="object_file_owner_user_cfg_0" version="1">
      <unix:filepath>/boot/grub2/user.cfg</unix:filepath>
    <filter action="exclude">symlink_file_owner_user_cfg_uid_0</filter>
    <filter action="exclude">state_file_owner_user_cfg_uid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_owner_user_cfg_uid_0_0" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_owner_user_cfg_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
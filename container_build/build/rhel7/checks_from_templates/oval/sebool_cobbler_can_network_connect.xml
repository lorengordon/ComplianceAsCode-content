<def-group>
  <definition class="compliance" id="sebool_cobbler_can_network_connect" version="1">
    <metadata>
        <title>Disable the cobbler_can_network_connect SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The SELinux 'cobbler_can_network_connect' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="cobbler_can_network_connect is configured correctly" test_ref="test_sebool_cobbler_can_network_connect" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="cobbler_can_network_connect is configured correctly" id="test_sebool_cobbler_can_network_connect" version="1">
    <linux:object object_ref="object_sebool_cobbler_can_network_connect" />
    <linux:state state_ref="state_sebool_cobbler_can_network_connect" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_cobbler_can_network_connect" version="1">
    <linux:name>cobbler_can_network_connect</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_cobbler_can_network_connect" version="1">
    <linux:name>cobbler_can_network_connect</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_cobbler_can_network_connect"/>
      <linux:pending_status datatype="boolean" var_ref="var_cobbler_can_network_connect"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for cobbler_can_network_connect" datatype="boolean" id="var_cobbler_can_network_connect" version="1" />
  
</def-group>
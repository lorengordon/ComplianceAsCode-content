<def-group>
  <definition class="compliance" id="sebool_git_cgi_use_cifs" version="1">
    <metadata>
        <title>Disable the git_cgi_use_cifs SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The SELinux 'git_cgi_use_cifs' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="git_cgi_use_cifs is configured correctly" test_ref="test_sebool_git_cgi_use_cifs" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="git_cgi_use_cifs is configured correctly" id="test_sebool_git_cgi_use_cifs" version="1">
    <linux:object object_ref="object_sebool_git_cgi_use_cifs" />
    <linux:state state_ref="state_sebool_git_cgi_use_cifs" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_git_cgi_use_cifs" version="1">
    <linux:name>git_cgi_use_cifs</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_git_cgi_use_cifs" version="1">
    <linux:name>git_cgi_use_cifs</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_git_cgi_use_cifs"/>
      <linux:pending_status datatype="boolean" var_ref="var_git_cgi_use_cifs"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for git_cgi_use_cifs" datatype="boolean" id="var_git_cgi_use_cifs" version="1" />
  
</def-group>
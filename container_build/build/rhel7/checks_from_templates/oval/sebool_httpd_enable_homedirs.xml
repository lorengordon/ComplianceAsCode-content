<def-group>
  <definition class="compliance" id="sebool_httpd_enable_homedirs" version="1">
    <metadata>
        <title>Disable the httpd_enable_homedirs SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The SELinux 'httpd_enable_homedirs' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="httpd_enable_homedirs is configured correctly" test_ref="test_sebool_httpd_enable_homedirs" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="httpd_enable_homedirs is configured correctly" id="test_sebool_httpd_enable_homedirs" version="1">
    <linux:object object_ref="object_sebool_httpd_enable_homedirs" />
    <linux:state state_ref="state_sebool_httpd_enable_homedirs" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_httpd_enable_homedirs" version="1">
    <linux:name>httpd_enable_homedirs</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_httpd_enable_homedirs" version="1">
    <linux:name>httpd_enable_homedirs</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_httpd_enable_homedirs"/>
      <linux:pending_status datatype="boolean" var_ref="var_httpd_enable_homedirs"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for httpd_enable_homedirs" datatype="boolean" id="var_httpd_enable_homedirs" version="1" />
  
</def-group>
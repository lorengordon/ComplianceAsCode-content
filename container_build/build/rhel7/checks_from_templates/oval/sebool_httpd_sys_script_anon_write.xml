<def-group>
  <definition class="compliance" id="sebool_httpd_sys_script_anon_write" version="1">
    <metadata>
        <title>Disable the httpd_sys_script_anon_write SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The SELinux 'httpd_sys_script_anon_write' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="httpd_sys_script_anon_write is configured correctly" test_ref="test_sebool_httpd_sys_script_anon_write" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="httpd_sys_script_anon_write is configured correctly" id="test_sebool_httpd_sys_script_anon_write" version="1">
    <linux:object object_ref="object_sebool_httpd_sys_script_anon_write" />
    <linux:state state_ref="state_sebool_httpd_sys_script_anon_write" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_httpd_sys_script_anon_write" version="1">
    <linux:name>httpd_sys_script_anon_write</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_httpd_sys_script_anon_write" version="1">
    <linux:name>httpd_sys_script_anon_write</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_httpd_sys_script_anon_write"/>
      <linux:pending_status datatype="boolean" var_ref="var_httpd_sys_script_anon_write"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for httpd_sys_script_anon_write" datatype="boolean" id="var_httpd_sys_script_anon_write" version="1" />
  
</def-group>
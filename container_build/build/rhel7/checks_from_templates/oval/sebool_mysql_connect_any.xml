<def-group>
  <definition class="compliance" id="sebool_mysql_connect_any" version="1">
    <metadata>
        <title>Disable the mysql_connect_any SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The SELinux 'mysql_connect_any' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="mysql_connect_any is configured correctly" test_ref="test_sebool_mysql_connect_any" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="mysql_connect_any is configured correctly" id="test_sebool_mysql_connect_any" version="1">
    <linux:object object_ref="object_sebool_mysql_connect_any" />
    <linux:state state_ref="state_sebool_mysql_connect_any" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_mysql_connect_any" version="1">
    <linux:name>mysql_connect_any</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_mysql_connect_any" version="1">
    <linux:name>mysql_connect_any</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_mysql_connect_any"/>
      <linux:pending_status datatype="boolean" var_ref="var_mysql_connect_any"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for mysql_connect_any" datatype="boolean" id="var_mysql_connect_any" version="1" />
  
</def-group>
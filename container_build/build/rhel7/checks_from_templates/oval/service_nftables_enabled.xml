<def-group>

  <definition class="compliance" id="service_nftables_enabled" version="1">
    <metadata>
        <title>Verify nftables Service is Enabled</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The nftables service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package nftables installed and service nftables is configured to start" operator="AND">
    <criterion comment="nftables installed" test_ref="test_service_nftables_package_nftables_installed" />
      <criteria comment="service nftables is configured to start and is running" operator="AND">
        <criterion comment="nftables is running" test_ref="test_service_running_nftables" />
        <criteria operator="OR" comment="service nftables is configured to start">
          <criterion comment="multi-user.target wants nftables" test_ref="test_multi_user_wants_nftables" />
          <criterion comment="multi-user.target wants nftables socket" test_ref="test_multi_user_wants_nftables_socket" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_nftables" version="1">
    <linux:object object_ref="object_multi_user_target_for_nftables_enabled" />
    <linux:state state_ref="state_systemd_nftables_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_nftables_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_nftables_on" comment="nftables listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">nftables.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_nftables_socket" version="1">
    <linux:object object_ref="object_multi_user_target_for_nftables_socket_enabled" />
    <linux:state state_ref="state_systemd_nftables_socket_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_nftables_socket_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_nftables_socket_on" comment="nftables listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">nftables.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_running_nftables" check="at least one" check_existence="at_least_one_exists" comment="Test that the nftables service is running" version="1">
    <linux:object object_ref="obj_service_running_nftables"/>
    <linux:state state_ref="state_service_running_nftables"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_running_nftables" comment="Retrieve the ActiveState property of nftables" version="1">
    <linux:unit operation="pattern match">^nftables\.(socket|service)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_running_nftables" version="1" comment="nftables is running">
      <linux:value>active</linux:value>
  </linux:systemdunitproperty_state>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_service_nftables_package_nftables_installed" version="1"
  comment="package nftables is installed">
    <linux:object object_ref="obj_test_service_nftables_package_nftables_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_nftables_package_nftables_installed" version="1">
    <linux:name>nftables</linux:name>
  </linux:rpminfo_object>
  

</def-group>
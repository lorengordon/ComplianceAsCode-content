<def-group>
  <definition class="compliance" id="file_audit_tools_group_ownership" version="1">
   
      <metadata>
        <title>Audit Tools Must Be Group-owned by Root</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>This test makes sure that /sbin/auditctl, /sbin/aureport, /sbin/ausearch, /sbin/autrace, /sbin/auditd, /sbin/rsyslogd, /sbin/augenrules is group owned by 0.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /sbin/auditctl" test_ref="test_file_groupownerfile_audit_tools_group_ownership_0" />
    
      <criterion comment="Check file group ownership of /sbin/aureport" test_ref="test_file_groupownerfile_audit_tools_group_ownership_1" />
    
      <criterion comment="Check file group ownership of /sbin/ausearch" test_ref="test_file_groupownerfile_audit_tools_group_ownership_2" />
    
      <criterion comment="Check file group ownership of /sbin/autrace" test_ref="test_file_groupownerfile_audit_tools_group_ownership_3" />
    
      <criterion comment="Check file group ownership of /sbin/auditd" test_ref="test_file_groupownerfile_audit_tools_group_ownership_4" />
    
      <criterion comment="Check file group ownership of /sbin/rsyslogd" test_ref="test_file_groupownerfile_audit_tools_group_ownership_5" />
    
      <criterion comment="Check file group ownership of /sbin/augenrules" test_ref="test_file_groupownerfile_audit_tools_group_ownership_6" />
    
   
    </criteria>
  </definition>

  

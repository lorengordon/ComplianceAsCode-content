<def-group>
  <definition class="compliance" id="sebool_racoon_read_shadow" version="1">
    <metadata>
        <title>Disable the racoon_read_shadow SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The SELinux 'racoon_read_shadow' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="racoon_read_shadow is configured correctly" test_ref="test_sebool_racoon_read_shadow" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="racoon_read_shadow is configured correctly" id="test_sebool_racoon_read_shadow" version="1">
    <linux:object object_ref="object_sebool_racoon_read_shadow" />
    <linux:state state_ref="state_sebool_racoon_read_shadow" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_racoon_read_shadow" version="1">
    <linux:name>racoon_read_shadow</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_racoon_read_shadow" version="1">
    <linux:name>racoon_read_shadow</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_racoon_read_shadow"/>
      <linux:pending_status datatype="boolean" var_ref="var_racoon_read_shadow"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for racoon_read_shadow" datatype="boolean" id="var_racoon_read_shadow" version="1" />
  
</def-group>
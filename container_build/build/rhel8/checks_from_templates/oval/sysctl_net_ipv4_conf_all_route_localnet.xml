        <title>Prevent Routing External Traffic to Local Loopback on All IPv4 Interfaces</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The kernel 'net.ipv4.conf.all.route_localnet' parameter should be set to 0 in the system runtime.</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="kernel runtime parameter net.ipv4.conf.all.route_localnet set to 0"
                 test_ref="test_sysctl_net_ipv4_conf_all_route_localnet_runtime"/>
    </criteria>
  </definition>


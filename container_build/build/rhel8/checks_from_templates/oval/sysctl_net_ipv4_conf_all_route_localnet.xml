  </unix:sysctl_object>


  <unix:sysctl_state id="state_sysctl_net_ipv4_conf_all_route_localnet_runtime" version="1">

    <unix:value datatype="int"
                operation="equals">0</unix:value>

  </unix:sysctl_state>


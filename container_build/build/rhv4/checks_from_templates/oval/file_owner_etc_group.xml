<def-group>
  <definition class="compliance" id="file_owner_etc_group" version="1">
  
    <metadata>
        <title>Verify User Who Owns group File</title>
        
    <affected family="unix">
    <platform>Red Hat Virtualization 4</platform>
    </affected>
        <description>This test makes sure that /etc/group is owned by 0.</description>
    </metadata>
     <criteria>
   
     <criterion comment="Check file ownership of /etc/group" test_ref="test_file_owner_etc_group_0" />
   
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /etc/group" id="test_file_owner_etc_group_0" version="1">
    <unix:object object_ref="object_file_owner_etc_group_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/group" id="object_file_owner_etc_group_0" version="1">
      <unix:filepath>/etc/group</unix:filepath>
    <filter action="exclude">symlink_file_owner_etc_group_uid_0</filter>
    <filter action="exclude">state_file_owner_etc_group_uid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_owner_etc_group_uid_0_0" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_owner_etc_group_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
<def-group>
  

  

  <definition class="compliance" id="service_kdump_disabled" version="1">
    <metadata>
        <title>Disable KDump Kernel Crash Analyzer (kdump)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The kdump service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package kexec-tools removed or service kdump is not configured to start" operator="OR">
      <criterion comment="kexec-tools removed" test_ref="test_service_kdump_package_kexec-tools_removed" />
      <criteria operator="AND" comment="service kdump is not configured to start">
        <criterion comment="kdump is not running" test_ref="test_service_not_running_kdump" />
        <criterion comment="Property LoadState of service kdump is masked" test_ref="test_service_loadstate_is_masked_kdump" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitproperty_test id="test_service_not_running_kdump" check="all" check_existence="any_exist" comment="Test that the kdump service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_kdump"/>
    <linux:state state_ref="state_service_not_running_kdump"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_kdump" comment="Retrieve the ActiveState property of kdump" version="1">
    <linux:unit operation="pattern match">^kdump\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_kdump" version="1" comment="kdump is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_kdump" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service kdump is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_kdump"/>
    <linux:state state_ref="state_service_loadstate_is_masked_kdump"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_kdump" comment="Retrieve the LoadState property of kdump" version="1">
    <linux:unit operation="pattern match">^kdump\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_kdump" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  



  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_kdump_package_kexec-tools_removed" version="1"
  comment="package kexec-tools is removed">
    <linux:object object_ref="obj_test_service_kdump_package_kexec-tools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_kdump_package_kexec-tools_removed" version="1">
    <linux:name>kexec-tools</linux:name>
  </linux:rpminfo_object>


</def-group>
<def-group>
  <definition class="compliance" id="package_openldap-clients_removed"
  version="1">
    <metadata>
        <title>Ensure LDAP client is not installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package openldap2-client should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package openldap2-client is removed"
      test_ref="test_package_openldap2-client_removed" />
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_package_openldap2-client_removed" version="1"
  comment="package openldap2-client is removed">
    <linux:object object_ref="obj_test_package_openldap2-client_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_openldap2-client_removed" version="1">
    <linux:name>openldap2-client</linux:name>
  </linux:rpminfo_object>

</def-group>
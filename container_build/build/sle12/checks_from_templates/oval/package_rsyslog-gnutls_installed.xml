<def-group>
  <definition class="compliance" id="package_rsyslog-gnutls_installed"
  version="1">
    <metadata>
        <title>Ensure rsyslog-gnutls is installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package rsyslog-module-gtls should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package rsyslog-module-gtls is installed"
      test_ref="test_package_rsyslog-module-gtls_installed" />
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_rsyslog-module-gtls_installed" version="1"
  comment="package rsyslog-module-gtls is installed">
    <linux:object object_ref="obj_test_package_rsyslog-module-gtls_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_rsyslog-module-gtls_installed" version="1">
    <linux:name>rsyslog-module-gtls</linux:name>
  </linux:rpminfo_object>
  

</def-group>
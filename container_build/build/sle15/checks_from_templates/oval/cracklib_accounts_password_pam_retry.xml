
   


<def-group>
  <definition class="compliance" id="cracklib_accounts_password_pam_retry" version="3">
    <metadata>
        <title>Set Password Retry Limit</title>
        
    <affected family="unix">
    <platform>SUSE Linux Enterprise 15</platform>
    </affected>
        <description>Configure PAM module</description>
    </metadata>
    <criteria operator="AND" comment="Make sure arguments are properly configured">


      <criterion test_ref="test_pam_password_pam_cracklib_retry" comment="Verify retry is set to the desired state" />


    </criteria>
  </definition>



  <ind:textfilecontent54_test id="test_pam_password_pam_cracklib_retry"
  check="all"
  comment="Verify retry configuation of pam_cracklib.so" version="1">
    <ind:object object_ref="object_pam_password_pam_cracklib_retry" />
    <ind:state state_ref="state_pam_password_pam_cracklib_retry" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_pam_password_pam_cracklib_retry" comment="Check retry configuration of PAM pam_cracklib.so module" version="1">
    <ind:filepath>/etc/pam.d/common-password</ind:filepath>
    <ind:pattern operation="pattern match">^\s*password\s+requisite\s+pam_cracklib.so.*\sretry=(-?\d+)(?:\s+.*)?</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_pam_password_pam_cracklib_retry" version="3">
    <ind:subexpression datatype="int" operation="less than or equal" var_ref="var_password_pam_retry" />
  </ind:textfilecontent54_state>

  <external_variable comment="PAM external variable var_password_pam_retry" datatype="int" id="var_password_pam_retry" version="1" />


</def-group>
<def-group>
  <definition class="compliance" id="package_tcp_wrappers_installed"
  version="1">
    <metadata>
        <title>Install tcp_wrappers Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package tcpd should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package tcpd is installed"
      test_ref="test_package_tcpd_installed" />
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_tcpd_installed" version="1"
  comment="package tcpd is installed">
    <linux:object object_ref="obj_test_package_tcpd_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_tcpd_installed" version="1">
    <linux:name>tcpd</linux:name>
  </linux:rpminfo_object>
  

</def-group>
<def-group>
  <definition class="compliance" id="file_groupowner_var_log" version="1">
   
      <metadata>
        <title>Verify Group Who Owns /var/log Directory</title>
        
    <affected family="unix">
    <platform>Ubuntu 16.04</platform>
    </affected>
        <description>This test makes sure that /var/log/ is group owned by 110.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /var/log/" test_ref="test_file_groupowner_var_log_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /var/log/" id="test_file_groupowner_var_log_0" version="1">
    <unix:object object_ref="object_file_groupowner_var_log_0" />
  </unix:file_test>

  <unix:file_object comment="/var/log/" id="object_file_groupowner_var_log_0" version="1">
      <unix:path>/var/log</unix:path>
      <unix:filename xsi:nil="true" />
    <filter action="exclude">symlink_file_groupowner_var_log_uid_110</filter>
    <filter action="exclude">state_file_groupowner_var_log_gid_110_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_var_log_gid_110_0" version="1">
    <unix:group_id datatype="int">110</unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupowner_var_log_uid_110" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
<def-group>
  <definition class="compliance" id="chronyd_run_as_chrony_user" version="1">
    <metadata>
        <title>Ensure that chronyd is running under chrony user account</title>
        
    <affected family="unix">
    <platform>SUSE Linux Enterprise 12</platform>
      <platform>Ubuntu 22.04</platform>
      <platform>Red Hat Enterprise Linux 9</platform>
      <platform>Fedora</platform>
      <platform>SUSE Linux Enterprise 15</platform>
      <platform>Alibaba Cloud Linux 2</platform>
      <platform>Red Hat Enterprise Linux 7</platform>
      <platform>Ubuntu 20.04</platform>
      <platform>Red Hat Enterprise Linux 8</platform>
      <platform>Alibaba Cloud Linux 3</platform>
    </affected>
        <description>Ensure 'user' is configured with value '_chrony' in /etc/chrony/chrony.conf</description>
    </metadata>
    <criteria comment="The respective application or service is configured correctly"
    operator="OR"><criterion comment="Check the user in /etc/chrony/chrony.conf"
  test_ref="test_chronyd_run_as_chrony_user" /><criterion comment="Check the absence of user in /etc/chrony/chrony.conf"
  test_ref="test_chronyd_run_as_chrony_user_default_not_overriden" />
    </criteria>
  </definition>
  
<ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="tests the value of user setting in the /etc/chrony/chrony.conf file"
  id="test_chronyd_run_as_chrony_user" version="1">
  <ind:object object_ref="obj_chronyd_run_as_chrony_user" />
  <ind:state state_ref="state_chronyd_run_as_chrony_user" />
</ind:textfilecontent54_test>
  
<ind:textfilecontent54_object id="obj_chronyd_run_as_chrony_user" version="1">
  <ind:filepath>/etc/chrony/chrony.conf</ind:filepath>
  <ind:pattern operation="pattern match">^[ \t]*user[[:space:]](.+?)[ \t]*(?:$|#)</ind:pattern>
  <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
</ind:textfilecontent54_object>
  
<ind:textfilecontent54_state id="state_chronyd_run_as_chrony_user" version="1">
  <ind:subexpression datatype="string" operation="pattern match">^_chrony$</ind:subexpression>
</ind:textfilecontent54_state>
  
<ind:textfilecontent54_test check="all" check_existence="none_exist"
  comment="tests the absence of user setting in the /etc/chrony/chrony.conf file"
  id="test_chronyd_run_as_chrony_user_default_not_overriden" version="1">
  <ind:object object_ref="obj_chronyd_run_as_chrony_user_default_not_overriden" />
</ind:textfilecontent54_test>
  
<ind:textfilecontent54_object id="obj_chronyd_run_as_chrony_user_default_not_overriden" version="1">
  <ind:filepath>/etc/chrony/chrony.conf</ind:filepath>
  <ind:pattern operation="pattern match">^[ \t]*user[[:space:]]</ind:pattern>
  <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
</ind:textfilecontent54_object>

</def-group>
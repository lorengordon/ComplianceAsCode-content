
<def-group>
  <definition class="compliance" id="chronyd_sync_clock" version="1">
    <metadata>
        <title>Synchronize internal information system clocks</title>
        
    <affected family="unix">
    <platform>Ubuntu 20.04</platform>
    </affected>
        <description>Check presence of makestep 1 -1 in /etc/chrony/chrony.conf</description>
    </metadata>
    <criteria operator="AND" comment="Test conditions - presence of the file plus 0 extra definitions.">
      <criterion comment="Check that /etc/chrony/chrony.conf contains a line with certain text" test_ref="test_chronyd_sync_clock" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all"
  comment="tests the presence of 'makestep 1 -1' setting in the /etc/chrony/chrony.conf file"
  id="test_chronyd_sync_clock" version="1">
  <ind:object object_ref="obj_chronyd_sync_clock" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_chronyd_sync_clock" version="1">
    <ind:filepath>/etc/chrony/chrony.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*makestep 1 \-1[\s]*$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
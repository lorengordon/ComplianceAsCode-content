<def-group>
  <definition class="compliance" id="file_permissions_audit_configuration" version="1">
  
    <metadata>
        <title>Audit Configuration Files Permissions are 640 or More Restrictive</title>
        
    <affected family="unix">
    <platform>Ubuntu 20.04</platform>
    </affected>
        <description>This test makes sure that /etc/audit/, /etc/audit/rules.d/ has mode 0640.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
  
      <criterion comment="Check file mode of /etc/audit/" test_ref="test_file_permissions_audit_configuration_0"/>
  
      <criterion comment="Check file mode of /etc/audit/rules.d/" test_ref="test_file_permissions_audit_configuration_1"/>
  
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing mode of /etc/audit/" id="test_file_permissions_audit_configuration_0" version="3">
    <unix:object object_ref="object_file_permissions_audit_configuration_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/audit/" id="object_file_permissions_audit_configuration_0" version="1">
      <unix:path>/etc/audit</unix:path>
      <unix:filename operation="pattern match">.*audit\(\.rules\|d\.conf\)$</unix:filename>
      <filter action="exclude">exclude_symlinks__audit_configuration</filter>
      <filter action="exclude">state_file_permissions_audit_configuration_0_mode_0640or_stricter_</filter>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_audit_configuration_0_mode_0640or_stricter_" operator="AND" version="3">
      <unix:suid datatype="boolean">false</unix:suid>
      <unix:sgid datatype="boolean">false</unix:sgid>
      <unix:sticky datatype="boolean">false</unix:sticky>
      <unix:uexec datatype="boolean">false</unix:uexec>
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:gexec datatype="boolean">false</unix:gexec>
      <unix:oread datatype="boolean">false</unix:oread>
      <unix:owrite datatype="boolean">false</unix:owrite>
      <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing mode of /etc/audit/rules.d/" id="test_file_permissions_audit_configuration_1" version="3">
    <unix:object object_ref="object_file_permissions_audit_configuration_1" />
  </unix:file_test>

  <unix:file_object comment="/etc/audit/rules.d/" id="object_file_permissions_audit_configuration_1" version="1">
      <unix:path>/etc/audit/rules.d</unix:path>
      <unix:filename operation="pattern match">.*\.rules$</unix:filename>
      <filter action="exclude">exclude_symlinks__audit_configuration</filter>
      <filter action="exclude">state_file_permissions_audit_configuration_1_mode_0640or_stricter_</filter>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_audit_configuration_1_mode_0640or_stricter_" operator="AND" version="3">
      <unix:suid datatype="boolean">false</unix:suid>
      <unix:sgid datatype="boolean">false</unix:sgid>
      <unix:sticky datatype="boolean">false</unix:sticky>
      <unix:uexec datatype="boolean">false</unix:uexec>
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:gexec datatype="boolean">false</unix:gexec>
      <unix:oread datatype="boolean">false</unix:oread>
      <unix:owrite datatype="boolean">false</unix:owrite>
      <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  

  <unix:file_state id="exclude_symlinks__audit_configuration" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
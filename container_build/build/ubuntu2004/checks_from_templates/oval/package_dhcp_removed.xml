<def-group>
  <definition class="compliance" id="package_dhcp_removed"
  version="1">
    <metadata>
        <title>Uninstall DHCP Server Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package isc-dhcp-server should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package isc-dhcp-server is removed"
      test_ref="test_package_isc-dhcp-server_removed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="none_exist"
  id="test_package_isc-dhcp-server_removed" version="1"
  comment="package isc-dhcp-server is removed">
    <linux:object object_ref="obj_test_package_isc-dhcp-server_removed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_isc-dhcp-server_removed" version="1">
    <linux:name>isc-dhcp-server</linux:name>
  </linux:dpkginfo_object>

</def-group>
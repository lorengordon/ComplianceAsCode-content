<def-group>
  <definition class="compliance" id="package_httpd_removed"
  version="1">
    <metadata>
        <title>Uninstall httpd Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package apache2 should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package apache2 is removed"
      test_ref="test_package_apache2_removed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="none_exist"
  id="test_package_apache2_removed" version="1"
  comment="package apache2 is removed">
    <linux:object object_ref="obj_test_package_apache2_removed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_apache2_removed" version="1">
    <linux:name>apache2</linux:name>
  </linux:dpkginfo_object>

</def-group>
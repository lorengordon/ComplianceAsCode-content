<def-group>
  <definition class="compliance" id="package_opensc_installed"
  version="1">
    <metadata>
        <title>Install the opensc Package For Multifactor Authentication</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package opensc-pkcs11 should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package opensc-pkcs11 is installed"
      test_ref="test_package_opensc-pkcs11_installed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_package_opensc-pkcs11_installed" version="1"
  comment="package opensc-pkcs11 is installed">
    <linux:object object_ref="obj_test_package_opensc-pkcs11_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_opensc-pkcs11_installed" version="1">
    <linux:name>opensc-pkcs11</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
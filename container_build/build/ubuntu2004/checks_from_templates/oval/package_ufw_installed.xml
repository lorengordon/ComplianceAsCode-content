<def-group>
  <definition class="compliance" id="package_ufw_installed"
  version="1">
    <metadata>
        <title>Install ufw Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package ufw should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package ufw is installed"
      test_ref="test_package_ufw_installed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_package_ufw_installed" version="1"
  comment="package ufw is installed">
    <linux:object object_ref="obj_test_package_ufw_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_ufw_installed" version="1">
    <linux:name>ufw</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
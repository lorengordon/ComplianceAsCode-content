<def-group>

  <definition class="compliance" id="service_sshd_enabled" version="1">
    <metadata>
        <title>Enable the OpenSSH Service</title>
        
    <affected family="unix">
    <platform>Ubuntu 20.04</platform>
    </affected>
        <description>The ssh service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package openssh-server installed and service ssh is configured to start" operator="AND">
    <criterion comment="openssh-server installed" test_ref="test_service_ssh_package_openssh-server_installed" />
      <criteria comment="service ssh is configured to start and is running" operator="AND">
        <criterion comment="ssh is running" test_ref="test_service_running_ssh" />
        <criteria operator="OR" comment="service ssh is configured to start">
          <criterion comment="multi-user.target wants ssh" test_ref="test_multi_user_wants_ssh" />
          <criterion comment="multi-user.target wants ssh socket" test_ref="test_multi_user_wants_ssh_socket" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_ssh" version="1">
    <linux:object object_ref="object_multi_user_target_for_ssh_enabled" />
    <linux:state state_ref="state_systemd_ssh_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_ssh_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_ssh_on" comment="ssh listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">ssh.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_ssh_socket" version="1">
    <linux:object object_ref="object_multi_user_target_for_ssh_socket_enabled" />
    <linux:state state_ref="state_systemd_ssh_socket_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_ssh_socket_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_ssh_socket_on" comment="ssh listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">ssh.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_running_ssh" check="at least one" check_existence="at_least_one_exists" comment="Test that the ssh service is running" version="1">
    <linux:object object_ref="obj_service_running_ssh"/>
    <linux:state state_ref="state_service_running_ssh"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_running_ssh" comment="Retrieve the ActiveState property of ssh" version="1">
    <linux:unit operation="pattern match">^ssh\.(socket|service)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_running_ssh" version="1" comment="ssh is running">
      <linux:value>active</linux:value>
  </linux:systemdunitproperty_state>



  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_service_ssh_package_openssh-server_installed" version="1"
  comment="package openssh-server is installed">
    <linux:object object_ref="obj_test_service_ssh_package_openssh-server_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_service_ssh_package_openssh-server_installed" version="1">
    <linux:name>openssh-server</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
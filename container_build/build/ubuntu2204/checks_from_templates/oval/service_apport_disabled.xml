<def-group>
  

  

  <definition class="compliance" id="service_apport_disabled" version="1">
    <metadata>
        <title>Disable Apport Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The apport service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package apport removed or service apport is not configured to start" operator="OR">
      <criterion comment="apport removed" test_ref="test_service_apport_package_apport_removed" />
      <criteria operator="AND" comment="service apport is not configured to start">
        <criterion comment="apport is not running" test_ref="test_service_not_running_apport" />
        <criterion comment="Property LoadState of service apport is masked" test_ref="test_service_loadstate_is_masked_apport" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitproperty_test id="test_service_not_running_apport" check="all" check_existence="any_exist" comment="Test that the apport service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_apport"/>
    <linux:state state_ref="state_service_not_running_apport"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_apport" comment="Retrieve the ActiveState property of apport" version="1">
    <linux:unit operation="pattern match">^apport\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_apport" version="1" comment="apport is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_apport" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service apport is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_apport"/>
    <linux:state state_ref="state_service_loadstate_is_masked_apport"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_apport" comment="Retrieve the LoadState property of apport" version="1">
    <linux:unit operation="pattern match">^apport\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_apport" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  



  <linux:dpkginfo_test check="all" check_existence="none_exist"
  id="test_service_apport_package_apport_removed" version="1"
  comment="package apport is removed">
    <linux:object object_ref="obj_test_service_apport_package_apport_removed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_service_apport_package_apport_removed" version="1">
    <linux:name>apport</linux:name>
  </linux:dpkginfo_object>


</def-group>
<def-group>
  

  

  <definition class="compliance" id="service_syslog_disabled" version="1">
    <metadata>
        <title>service_syslog_disabled</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The syslog service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsyslog removed or service syslog is not configured to start" operator="OR">
      <criterion comment="rsyslog removed" test_ref="test_service_syslog_package_rsyslog_removed" />
      <criteria operator="AND" comment="service syslog is not configured to start">
        <criterion comment="syslog is not running" test_ref="test_service_not_running_syslog" />
        <criterion comment="Property LoadState of service syslog is masked" test_ref="test_service_loadstate_is_masked_syslog" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitproperty_test id="test_service_not_running_syslog" check="all" check_existence="any_exist" comment="Test that the syslog service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_syslog"/>
    <linux:state state_ref="state_service_not_running_syslog"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_syslog" comment="Retrieve the ActiveState property of syslog" version="1">
    <linux:unit operation="pattern match">^syslog\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_syslog" version="1" comment="syslog is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_syslog" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service syslog is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_syslog"/>
    <linux:state state_ref="state_service_loadstate_is_masked_syslog"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_syslog" comment="Retrieve the LoadState property of syslog" version="1">
    <linux:unit operation="pattern match">^syslog\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_syslog" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  



  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_syslog_package_rsyslog_removed" version="1"
  comment="package rsyslog is removed">
    <linux:object object_ref="obj_test_service_syslog_package_rsyslog_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_syslog_package_rsyslog_removed" version="1">
    <linux:name>rsyslog</linux:name>
  </linux:rpminfo_object>


</def-group>
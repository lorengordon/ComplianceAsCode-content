<def-group>
  <definition class="inventory" id="package_audit"
  version="1"><metadata>
        <title>Package auditd is installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package auditd should be installed.</description>
    </metadata>
    <criteria>
    
      <criterion comment="Platform package auditd is installed"
      test_ref="inventory_test_package_audit_installed" />
    
    </criteria>
  </definition>


  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="inventory_test_package_audit_installed" version="1"
  comment="package auditd is installed">
    <linux:object object_ref="obj_inventory_test_package_audit_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_inventory_test_package_audit_installed" version="1">
    <linux:name>auditd</linux:name>
  </linux:dpkginfo_object>
  


</def-group>
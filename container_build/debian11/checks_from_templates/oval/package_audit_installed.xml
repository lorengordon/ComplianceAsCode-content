<def-group>
  <definition class="compliance" id="package_audit_installed"
  version="1">
    <metadata>
        <title>Ensure the audit Subsystem is Installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package auditd should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package auditd is installed"
      test_ref="test_package_auditd_installed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_package_auditd_installed" version="1"
  comment="package auditd is installed">
    <linux:object object_ref="obj_test_package_auditd_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_auditd_installed" version="1">
    <linux:name>auditd</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
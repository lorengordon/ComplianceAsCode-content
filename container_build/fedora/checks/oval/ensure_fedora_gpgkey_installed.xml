



<def-group>
  <definition class="compliance" id="ensure_fedora_gpgkey_installed" version="2">
    <metadata>
        <title>Ensure Fedora GPG Key Installed</title>
        
    <affected family="unix">
    <platform>Fedora</platform>
    </affected>
        <description>The Fedora release key package is required to be installed.</description>
    </metadata>
    <criteria comment="Fedora Vendor keys" operator="AND">
      <extend_definition comment="Fedora installed" definition_ref="installed_OS_is_fedora" />
      <criteria comment="Supported Fedora key is installed" operator="OR">
          
   <criterion comment="Fedora 38 package gpg-pubkey-eb10b464-60242b08 is installed"
        test_ref="test_package_gpgkey-eb10b464-60242b08_installed" />

          
   <criterion comment="Fedora 37 package gpg-pubkey-5323552a-6112bcdc is installed"
        test_ref="test_package_gpgkey-5323552a-6112bcdc_installed" />

          
   <criterion comment="Fedora 36 package gpg-pubkey-38ab71f4-60242b08 is installed"
        test_ref="test_package_gpgkey-38ab71f4-60242b08_installed" />

          
   <criterion comment="Fedora 35 package gpg-pubkey-9867c58f-601c49ca is installed"
        test_ref="test_package_gpgkey-9867c58f-601c49ca_installed" />

      </criteria>
    </criteria>
  </definition>

  <!-- First define global "object_package_gpg-pubkey" to be shared (reused) across multiple tests -->
  <linux:rpminfo_object id="object_package_gpg-pubkey" version="1">
    <linux:name>gpg-pubkey</linux:name>
  </linux:rpminfo_object>

  <!-- Perform the particular tests themselves -->
  
  <!-- Test for Fedora 38 release key -->
  <linux:rpminfo_test check="only one" check_existence="at_least_one_exists"
  id="test_package_gpgkey-eb10b464-60242b08_installed" version="1"
  comment="Fedora eb10b464 release key package is installed">
    <linux:object object_ref="object_package_gpg-pubkey" />
    <linux:state state_ref="state_package_gpg-pubkey-eb10b464-60242b08" />
  </linux:rpminfo_test>

  <linux:rpminfo_state id="state_package_gpg-pubkey-eb10b464-60242b08" version="1">
    <linux:release>60242b08</linux:release>
    <linux:version>eb10b464</linux:version>
  </linux:rpminfo_state>

  
  <!-- Test for Fedora 37 release key -->
  <linux:rpminfo_test check="only one" check_existence="at_least_one_exists"
  id="test_package_gpgkey-5323552a-6112bcdc_installed" version="1"
  comment="Fedora 5323552a release key package is installed">
    <linux:object object_ref="object_package_gpg-pubkey" />
    <linux:state state_ref="state_package_gpg-pubkey-5323552a-6112bcdc" />
  </linux:rpminfo_test>

  <linux:rpminfo_state id="state_package_gpg-pubkey-5323552a-6112bcdc" version="1">
    <linux:release>6112bcdc</linux:release>
    <linux:version>5323552a</linux:version>
  </linux:rpminfo_state>

  
  <!-- Test for Fedora 36 release key -->
  <linux:rpminfo_test check="only one" check_existence="at_least_one_exists"
  id="test_package_gpgkey-38ab71f4-60242b08_installed" version="1"
  comment="Fedora 38ab71f4 release key package is installed">
    <linux:object object_ref="object_package_gpg-pubkey" />
    <linux:state state_ref="state_package_gpg-pubkey-38ab71f4-60242b08" />
  </linux:rpminfo_test>

  <linux:rpminfo_state id="state_package_gpg-pubkey-38ab71f4-60242b08" version="1">
    <linux:release>60242b08</linux:release>
    <linux:version>38ab71f4</linux:version>
  </linux:rpminfo_state>

  
  <!-- Test for Fedora 35 release key -->
  <linux:rpminfo_test check="only one" check_existence="at_least_one_exists"
  id="test_package_gpgkey-9867c58f-601c49ca_installed" version="1"
  comment="Fedora 9867c58f release key package is installed">
    <linux:object object_ref="object_package_gpg-pubkey" />
    <linux:state state_ref="state_package_gpg-pubkey-9867c58f-601c49ca" />
  </linux:rpminfo_test>

  <linux:rpminfo_state id="state_package_gpg-pubkey-9867c58f-601c49ca" version="1">
    <linux:release>601c49ca</linux:release>
    <linux:version>9867c58f</linux:version>
  </linux:rpminfo_state>


</def-group>
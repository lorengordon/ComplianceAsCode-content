<def-group>
  <definition class="compliance" id="file_ownership_audit_configuration" version="1">
  
    <metadata>
        <title>Audit Configuration Files Must Be Owned By Root</title>
        
    <affected family="unix">
    <platform>Oracle Linux 8</platform>
    </affected>
        <description>This test makes sure that /etc/audit/, /etc/audit/rules.d/ is owned by 0.</description>
    </metadata>
     <criteria>
   
     <criterion comment="Check file ownership of /etc/audit/" test_ref="test_file_ownership_audit_configuration_0" />
   
     <criterion comment="Check file ownership of /etc/audit/rules.d/" test_ref="test_file_ownership_audit_configuration_1" />
   
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /etc/audit/" id="test_file_ownership_audit_configuration_0" version="1">
    <unix:object object_ref="object_file_ownership_audit_configuration_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/audit/" id="object_file_ownership_audit_configuration_0" version="1">
      <unix:path>/etc/audit</unix:path>
      <unix:filename operation="pattern match">^audit(\.rules|d\.conf)$</unix:filename>
    <filter action="exclude">symlink_file_ownership_audit_configuration_uid_0</filter>
    <filter action="exclude">state_file_ownership_audit_configuration_uid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_ownership_audit_configuration_uid_0_0" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /etc/audit/rules.d/" id="test_file_ownership_audit_configuration_1" version="1">
    <unix:object object_ref="object_file_ownership_audit_configuration_1" />
  </unix:file_test>

  <unix:file_object comment="/etc/audit/rules.d/" id="object_file_ownership_audit_configuration_1" version="1">
      <unix:path>/etc/audit/rules.d</unix:path>
      <unix:filename operation="pattern match">^.*\.rules$</unix:filename>
    <filter action="exclude">symlink_file_ownership_audit_configuration_uid_0</filter>
    <filter action="exclude">state_file_ownership_audit_configuration_uid_0_1</filter>
  </unix:file_object>

  <unix:file_state id="state_file_ownership_audit_configuration_uid_0_1" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_ownership_audit_configuration_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
<def-group>
  <definition class="compliance" id="file_permissions_var_log_syslog" version="1">
  
    <metadata>
        <title>Verify Permissions on /var/log/syslog File</title>
        
    <affected family="unix">
    <platform>Oracle Linux 8</platform>
    </affected>
        <description>This test makes sure that /var/log/syslog has mode 0640.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
  
      <criterion comment="Check file mode of /var/log/syslog" test_ref="test_file_permissions_var_log_syslog_0"/>
  
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing mode of /var/log/syslog" id="test_file_permissions_var_log_syslog_0" version="3">
    <unix:object object_ref="object_file_permissions_var_log_syslog_0" />
  </unix:file_test>

  <unix:file_object comment="/var/log/syslog" id="object_file_permissions_var_log_syslog_0" version="1">
      <unix:filepath>/var/log/syslog</unix:filepath>
      <filter action="exclude">exclude_symlinks__var_log_syslog</filter>
      <filter action="exclude">state_file_permissions_var_log_syslog_0_mode_0640or_stricter_</filter>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_var_log_syslog_0_mode_0640or_stricter_" operator="AND" version="3">
      <unix:suid datatype="boolean">false</unix:suid>
      <unix:sgid datatype="boolean">false</unix:sgid>
      <unix:sticky datatype="boolean">false</unix:sticky>
      <unix:uexec datatype="boolean">false</unix:uexec>
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:gexec datatype="boolean">false</unix:gexec>
      <unix:oread datatype="boolean">false</unix:oread>
      <unix:owrite datatype="boolean">false</unix:owrite>
      <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  

  <unix:file_state id="exclude_symlinks__var_log_syslog" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
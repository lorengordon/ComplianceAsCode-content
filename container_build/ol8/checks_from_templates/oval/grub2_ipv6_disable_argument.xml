
<def-group>
  <definition class="compliance" id="grub2_ipv6_disable_argument" version="2">
    <metadata>
        <title>Ensure IPv6 is disabled through kernel boot parameter</title>
        
    <affected family="unix">
    <platform>Oracle Linux 8</platform>
    </affected>
        <description>Ensure ipv6.disable=1 is configured in the kernel line in /etc/default/grub.</description>
    </metadata>
    <criteria operator="AND">
      <criteria operator="OR">
        <criterion test_ref="test_grub2_ipv6_disable_argument_grub_env"
        comment="Check if ipv6.disable=1 is present in the GRUB2 environment variable block in /boot/grub2/grubenv" />
      <criterion test_ref="test_grub2_ipv6_disable_argument_grub_env_uefi"
        comment="Check if ipv6.disable=1 is present in the GRUB2 environment variable block in /boot/efi/EFI/redhat/grubenv" />
      </criteria>
      <extend_definition comment="check kernel command line parameters for referenced boot entries reference the $kernelopts variable" definition_ref="grub2_entries_reference_kernelopts" />
      
      
      <criteria operator="OR">
          <criterion test_ref="test_grub2_ipv6_disable_argument"
          comment="check for ipv6.disable=1 in /etc/default/grub via GRUB_CMDLINE_LINUX" />
          <criteria operator="AND">
            <criterion test_ref="test_grub2_ipv6_disable_argument_default"
            comment="check for ipv6.disable=1 in /etc/default/grub via GRUB_CMDLINE_LINUX_DEFAULT" />
            <extend_definition definition_ref="bootloader_disable_recovery_set_to_true"
            comment="Check GRUB_DISABLE_RECOVERY=true in /etc/default/grub" />
          </criteria>
        </criteria>
    </criteria>
  </definition>
  <ind:textfilecontent54_test id="test_grub2_ipv6_disable_argument"
  comment="check for ipv6.disable=1 in /etc/default/grub via GRUB_CMDLINE_LINUX"
  check="all" check_existence="all_exist" version="1">
    <ind:object object_ref="object_grub2_ipv6_disable_argument" />
    <ind:state state_ref="state_grub2_ipv6_disable_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_grub2_ipv6_disable_argument" version="1">
    <ind:filepath>/etc/default/grub</ind:filepath>
    <ind:pattern operation="pattern match">^\s*GRUB_CMDLINE_LINUX="(.*)"$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test id="test_grub2_ipv6_disable_argument_default"
  comment="check for ipv6.disable=1 in /etc/default/grub via GRUB_CMDLINE_LINUX_DEFAULT"
  check="all" check_existence="all_exist" version="1">
    <ind:object object_ref="object_grub2_ipv6_disable_argument_default" />
    <ind:state state_ref="state_grub2_ipv6_disable_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_grub2_ipv6_disable_argument_default"
  version="1">
    <ind:filepath>/etc/default/grub</ind:filepath>
    <ind:pattern operation="pattern match">^\s*GRUB_CMDLINE_LINUX_DEFAULT="(.*)"$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>


  <ind:textfilecontent54_test id="test_grub2_ipv6_disable_argument_grub_env"
  comment="check for kernel command line parameters ipv6.disable=1 in /boot/grub2/grubenv for all kernels"
  check="all" check_existence="all_exist" version="1">
    <ind:object object_ref="object_grub2_ipv6_disable_argument_grub_env" />
    <ind:state state_ref="state_grub2_ipv6_disable_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_grub2_ipv6_disable_argument_grub_env"
  version="1">
    <ind:filepath>/boot/grub2/grubenv</ind:filepath>
    <ind:pattern operation="pattern match">^kernelopts=(.*)$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test id="test_grub2_ipv6_disable_argument_grub_env_uefi"
  comment="check for kernel command line parameters ipv6.disable=1 in /boot/efi/EFI/redhat/grubenv for all kernels"
  check="all" check_existence="all_exist" version="1">
    <ind:object object_ref="object_grub2_ipv6_disable_argument_grub_env_uefi" />
    <ind:state state_ref="state_grub2_ipv6_disable_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_grub2_ipv6_disable_argument_grub_env_uefi"
  version="1">
    <ind:filepath>/boot/efi/EFI/redhat/grubenv</ind:filepath>
    <ind:pattern operation="pattern match">^kernelopts=(.*)$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>


  <ind:textfilecontent54_state id="state_grub2_ipv6_disable_argument"
  version="1">
    <ind:subexpression datatype="string" operation="pattern match">^(?:.*\s)?ipv6\.disable=1(?:\s.*)?$</ind:subexpression>
  </ind:textfilecontent54_state>


</def-group>
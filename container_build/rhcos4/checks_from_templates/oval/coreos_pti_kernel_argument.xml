  <ind:textfilecontent54_object id="object_coreos_pti_kernel_argument_pti_on_argument_in_boot_loader_entries_ostree_2_conf" version="1">
    <ind:filepath operation="pattern match">^/boot/loader/entries/ostree-2-.*.conf</ind:filepath>
    <ind:pattern operation="pattern match">^options (.*)$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_coreos_pti_kernel_argument_pti_on_argument_in_boot_loader_entries_ostree_2_conf" version="1">

<def-group>
  <definition class="compliance" id="file_groupowner_cron_allow" version="1">
   
      <metadata>
        <title>Verify Group Who Owns /etc/cron.allow file</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>This test makes sure that /etc/cron.allow is group owned by 0.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /etc/cron.allow" test_ref="test_file_groupowner_cron_allow_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /etc/cron.allow" id="test_file_groupowner_cron_allow_0" version="1">
    <unix:object object_ref="object_file_groupowner_cron_allow_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/cron.allow" id="object_file_groupowner_cron_allow_0" version="1">
      <unix:filepath>/etc/cron.allow</unix:filepath>
    <filter action="exclude">symlink_file_groupowner_cron_allow_uid_0</filter>
    <filter action="exclude">state_file_groupowner_cron_allow_gid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_cron_allow_gid_0_0" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupowner_cron_allow_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
<def-group>
  <definition class="inventory" id="package_audit"
  version="1"><metadata>
        <title>Package audit is installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package audit should be installed.</description>
    </metadata>
    <criteria>
    
      <criterion comment="Platform package audit is installed"
      test_ref="inventory_test_package_audit_installed" />
    
    </criteria>
  </definition>


  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="inventory_test_package_audit_installed" version="1"
  comment="package audit is installed">
    <linux:object object_ref="obj_inventory_test_package_audit_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_inventory_test_package_audit_installed" version="1">
    <linux:name>audit</linux:name>
  </linux:rpminfo_object>
  


</def-group>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="audit auditctl 64-bit mount" id="test_64bit_ardm_mount_auditctl" version="1">
    <ind:object object_ref="object_64bit_ardm_mount_auditctl" />
  </ind:textfilecontent54_test>

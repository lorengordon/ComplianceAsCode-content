<def-group>
  <definition class="compliance" id="file_ownership_audit_binaries" version="1">
  
    <metadata>
        <title>Verify that audit tools are owned by root</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>This test makes sure that /sbin/auditctl, /sbin/aureport, /sbin/ausearch, /sbin/autrace, /sbin/auditd, /sbin/audispd, /sbin/augenrules is owned by 0.</description>
    </metadata>
     <criteria>
   
     <criterion comment="Check file ownership of /sbin/auditctl" test_ref="test_file_ownership_audit_binaries_0" />
   
     <criterion comment="Check file ownership of /sbin/aureport" test_ref="test_file_ownership_audit_binaries_1" />
   
     <criterion comment="Check file ownership of /sbin/ausearch" test_ref="test_file_ownership_audit_binaries_2" />
   
     <criterion comment="Check file ownership of /sbin/autrace" test_ref="test_file_ownership_audit_binaries_3" />
   
     <criterion comment="Check file ownership of /sbin/auditd" test_ref="test_file_ownership_audit_binaries_4" />
   
     <criterion comment="Check file ownership of /sbin/audispd" test_ref="test_file_ownership_audit_binaries_5" />
   
     <criterion comment="Check file ownership of /sbin/augenrules" test_ref="test_file_ownership_audit_binaries_6" />
   
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /sbin/auditctl" id="test_file_ownership_audit_binaries_0" version="1">
    <unix:object object_ref="object_file_ownership_audit_binaries_0" />

<def-group>
  <definition class="compliance" id="file_permissions_cron_d" version="1">
  
    <metadata>
        <title>Verify Permissions on cron.d</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>This test makes sure that /etc/cron.d/ has mode 0700.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
  
      <criterion comment="Check file mode of /etc/cron.d/" test_ref="test_file_permissions_cron_d_0"/>
  
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing mode of /etc/cron.d/" id="test_file_permissions_cron_d_0" version="3">
    <unix:object object_ref="object_file_permissions_cron_d_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/cron.d/" id="object_file_permissions_cron_d_0" version="1">
      <unix:path>/etc/cron.d</unix:path>
      <unix:filename xsi:nil="true" />
      <filter action="exclude">exclude_symlinks__cron_d</filter>
      <filter action="exclude">state_file_permissions_cron_d_0_mode_0700or_stricter_</filter>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_cron_d_0_mode_0700or_stricter_" operator="AND" version="3">
      <unix:suid datatype="boolean">false</unix:suid>
      <unix:sgid datatype="boolean">false</unix:sgid>
      <unix:sticky datatype="boolean">false</unix:sticky>
      <unix:gread datatype="boolean">false</unix:gread>
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:gexec datatype="boolean">false</unix:gexec>
      <unix:oread datatype="boolean">false</unix:oread>
      <unix:owrite datatype="boolean">false</unix:owrite>
      <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  

  <unix:file_state id="exclude_symlinks__cron_d" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
<def-group>
  <definition class="compliance"
  id="kernel_module_hfsplus_disabled" version="1">
    <metadata>
        <title>Disable Mounting of hfsplus</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The kernel module hfsplus should be disabled.</description>
    </metadata>
    <criteria operator="OR">
      
      <criteria operator="AND">
        <criterion test_ref="test_kernmod_hfsplus_blacklisted"
        comment="kernel module hfsplus blacklisted in modprobe.d" />
        <criterion test_ref="test_kernmod_hfsplus_disabled"
        comment="kernel module hfsplus disabled in modprobe.d" />
      </criteria>
      


    </criteria>
  </definition>

  <ind:textfilecontent54_test id="test_kernmod_hfsplus_disabled" version="1" check="all"
  comment="kernel module hfsplus disabled">
    <ind:object object_ref="obj_kernmod_hfsplus_disabled" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_kernmod_hfsplus_disabled"
  version="1" comment="kernel module hfsplus disabled">
    <ind:path var_ref="var_kernel_module_hfsplus_paths" var_check="at least one" />
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^\s*install\s+hfsplus\s+(/bin/false|/bin/true)$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <constant_variable datatype="string" comment="Other paths where kernel modules can be configured"
  id="var_kernel_module_hfsplus_paths" version="1">
    <value>/etc/modprobe.d</value>
    <value>/etc/modules-load.d</value>
    <value>/run/modprobe.d</value>
    <value>/run/modules-load.d</value>
    <value>/usr/lib/modprobe.d</value>
    <value>/usr/lib/modules-load.d</value>
  </constant_variable>


  <ind:textfilecontent54_test id="test_kernmod_hfsplus_blacklisted" version="1" check="all"
  comment="kernel module hfsplus blacklisted">
    <ind:object object_ref="obj_kernmod_hfsplus_blacklisted" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_kernmod_hfsplus_blacklisted"
  version="1" comment="kernel module hfsplus blacklisted">
    <ind:path var_ref="var_kernel_module_hfsplus_paths" var_check="at least one" />
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^blacklist\s+hfsplus$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>




</def-group>
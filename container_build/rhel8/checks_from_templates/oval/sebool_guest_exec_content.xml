<def-group>
  <definition class="compliance" id="sebool_guest_exec_content" version="1">
    <metadata>
        <title>Disable the guest_exec_content SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The SELinux 'guest_exec_content' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="guest_exec_content is configured correctly" test_ref="test_sebool_guest_exec_content" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="guest_exec_content is configured correctly" id="test_sebool_guest_exec_content" version="1">
    <linux:object object_ref="object_sebool_guest_exec_content" />
    <linux:state state_ref="state_sebool_guest_exec_content" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_guest_exec_content" version="1">
    <linux:name>guest_exec_content</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_guest_exec_content" version="1">
    <linux:name>guest_exec_content</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_guest_exec_content"/>
      <linux:pending_status datatype="boolean" var_ref="var_guest_exec_content"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for guest_exec_content" datatype="boolean" id="var_guest_exec_content" version="1" />
  
</def-group>
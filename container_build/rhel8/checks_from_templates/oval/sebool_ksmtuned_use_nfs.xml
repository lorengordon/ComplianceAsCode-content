<def-group>
  <definition class="compliance" id="sebool_ksmtuned_use_nfs" version="1">
    <metadata>
        <title>Disable the ksmtuned_use_nfs SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The SELinux 'ksmtuned_use_nfs' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="ksmtuned_use_nfs is configured correctly" test_ref="test_sebool_ksmtuned_use_nfs" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="ksmtuned_use_nfs is configured correctly" id="test_sebool_ksmtuned_use_nfs" version="1">
    <linux:object object_ref="object_sebool_ksmtuned_use_nfs" />
    <linux:state state_ref="state_sebool_ksmtuned_use_nfs" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_ksmtuned_use_nfs" version="1">
    <linux:name>ksmtuned_use_nfs</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_ksmtuned_use_nfs" version="1">
    <linux:name>ksmtuned_use_nfs</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_ksmtuned_use_nfs"/>
      <linux:pending_status datatype="boolean" var_ref="var_ksmtuned_use_nfs"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for ksmtuned_use_nfs" datatype="boolean" id="var_ksmtuned_use_nfs" version="1" />
  
</def-group>
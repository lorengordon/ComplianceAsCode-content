<def-group>
  <definition class="compliance" id="sebool_zarafa_setrlimit" version="1">
    <metadata>
        <title>Disable the zarafa_setrlimit SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The SELinux 'zarafa_setrlimit' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="zarafa_setrlimit is configured correctly" test_ref="test_sebool_zarafa_setrlimit" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="zarafa_setrlimit is configured correctly" id="test_sebool_zarafa_setrlimit" version="1">
    <linux:object object_ref="object_sebool_zarafa_setrlimit" />
    <linux:state state_ref="state_sebool_zarafa_setrlimit" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_zarafa_setrlimit" version="1">
    <linux:name>zarafa_setrlimit</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_zarafa_setrlimit" version="1">
    <linux:name>zarafa_setrlimit</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_zarafa_setrlimit"/>
      <linux:pending_status datatype="boolean" var_ref="var_zarafa_setrlimit"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for zarafa_setrlimit" datatype="boolean" id="var_zarafa_setrlimit" version="1" />
  
</def-group>
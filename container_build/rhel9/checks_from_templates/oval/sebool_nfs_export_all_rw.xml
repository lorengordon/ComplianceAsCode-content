<def-group>
  <definition class="compliance" id="sebool_nfs_export_all_rw" version="1">
    <metadata>
        <title>Enable the nfs_export_all_rw SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 9</platform>
    </affected>
        <description>The SELinux 'nfs_export_all_rw' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="nfs_export_all_rw is configured correctly" test_ref="test_sebool_nfs_export_all_rw" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="nfs_export_all_rw is configured correctly" id="test_sebool_nfs_export_all_rw" version="1">
    <linux:object object_ref="object_sebool_nfs_export_all_rw" />
    <linux:state state_ref="state_sebool_nfs_export_all_rw" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_nfs_export_all_rw" version="1">
    <linux:name>nfs_export_all_rw</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_nfs_export_all_rw" version="1">
    <linux:name>nfs_export_all_rw</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_nfs_export_all_rw"/>
      <linux:pending_status datatype="boolean" var_ref="var_nfs_export_all_rw"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for nfs_export_all_rw" datatype="boolean" id="var_nfs_export_all_rw" version="1" />
  
</def-group>
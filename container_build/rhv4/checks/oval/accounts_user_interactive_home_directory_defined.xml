<def-group>
  <definition class="compliance" id="accounts_user_interactive_home_directory_defined" version="1">
    <metadata>
        <title>All Interactive Users Must Have A Home Directory Defined</title>
        
    <affected family="unix">
    <platform>Oracle Linux 8</platform>
      <platform>Oracle Linux 7</platform>
      <platform>Red Hat Enterprise Linux 7</platform>
      <platform>SUSE Linux Enterprise 12</platform>
      <platform>SUSE Linux Enterprise 15</platform>
      <platform>Oracle Linux 9</platform>
      <platform>Red Hat Enterprise Linux 9</platform>
      <platform>Red Hat Virtualization 4</platform>
      <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>All Interactive Users Must Have A Home Directory Defined</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_accounts_user_interactive_home_directory_defined"
                 comment="All Interactive Users Must Have A Home Directory Defined"/>
    </criteria>
  </definition>

  <unix:password_object id="object_accounts_user_interactive_home_directory_defined_objects" version="1">
    <unix:username datatype="string" operation="pattern match">.*</unix:username>
    <filter action="include">state_accounts_user_interactive_home_directory_defined_users_uids</filter>
    <filter action="exclude">state_accounts_user_interactive_home_directory_defined_users_ignored</filter>
    <filter action="exclude">state_accounts_user_interactive_home_directory_defined_users_nologin_shell</filter>
  </unix:password_object>

  <unix:password_state id="state_accounts_user_interactive_home_directory_defined_users_uids" version="1">
    <unix:user_id datatype="int" operation="greater than or equal">1000</unix:user_id>
  </unix:password_state>

  <unix:password_state id="state_accounts_user_interactive_home_directory_defined_users_ignored" version="1">
    <unix:username datatype="string" operation="pattern match">^(nobody|nfsnobody)$</unix:username>
  </unix:password_state>

  <unix:password_state id="state_accounts_user_interactive_home_directory_defined_users_nologin_shell" version="1">
    <unix:login_shell datatype="string" operation="pattern match">^/sbin/nologin$</unix:login_shell>
  </unix:password_state>

  <!-- #### creation of state #### -->
  <unix:password_state id="state_accounts_user_interactive_home_directory_defined" version="1">
    <unix:home_dir operation="pattern match">^\/[^\/\n]*\/[^\/\n]{1,}.*$</unix:home_dir>
  </unix:password_state>

  <!-- #### creation of test #### -->
  <unix:password_test id="test_accounts_user_interactive_home_directory_defined" check="all"
                      check_existence="any_exist" version="1"
                      comment="All Interactive Users Have A Home Directory Defined">
    <unix:object object_ref="object_accounts_user_interactive_home_directory_defined_objects"/>
    <unix:state state_ref="state_accounts_user_interactive_home_directory_defined"/>
  </unix:password_test>
</def-group>
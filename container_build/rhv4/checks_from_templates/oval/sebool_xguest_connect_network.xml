<def-group>
  <definition class="compliance" id="sebool_xguest_connect_network" version="1">
    <metadata>
        <title>Disable the xguest_connect_network SELinux Boolean</title>
        
    <affected family="unix">
    <platform>Red Hat Virtualization 4</platform>
    </affected>
        <description>The SELinux 'xguest_connect_network' boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="xguest_connect_network is configured correctly" test_ref="test_sebool_xguest_connect_network" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="xguest_connect_network is configured correctly" id="test_sebool_xguest_connect_network" version="1">
    <linux:object object_ref="object_sebool_xguest_connect_network" />
    <linux:state state_ref="state_sebool_xguest_connect_network" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_xguest_connect_network" version="1">
    <linux:name>xguest_connect_network</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_xguest_connect_network" version="1">
    <linux:name>xguest_connect_network</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_xguest_connect_network"/>
      <linux:pending_status datatype="boolean" var_ref="var_xguest_connect_network"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for xguest_connect_network" datatype="boolean" id="var_xguest_connect_network" version="1" />
  
</def-group>
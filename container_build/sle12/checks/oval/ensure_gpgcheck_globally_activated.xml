<def-group>
  <definition class="compliance" id="ensure_gpgcheck_globally_activated" version="1">
    <metadata>
        <title>Ensure gpgcheck Enabled In Main zypper Configuration</title>
        
    <affected family="unix">
    <platform>Alibaba Cloud Linux 2</platform>
      <platform>UnionTech OS Server 20</platform>
      <platform>Red Hat Enterprise Linux 8</platform>
      <platform>SUSE Linux Enterprise 12</platform>
      <platform>Alibaba Cloud Linux 3</platform>
      <platform>Fedora</platform>
      <platform>Red Hat Virtualization 4</platform>
      <platform>Anolis OS 8</platform>
      <platform>Red Hat Enterprise Linux 9</platform>
      <platform>Oracle Linux 8</platform>
      <platform>Oracle Linux 7</platform>
      <platform>Oracle Linux 9</platform>
      <platform>SUSE Linux Enterprise 15</platform>
      <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>The gpgcheck option should be used to ensure that checking
      of an RPM package's signature always occurs prior to its
      installation.</description>
    </metadata>
    <criteria operator="AND">
     <criterion comment="check value of gpgcheck in /etc/zypp/zypp.conf" test_ref="test_ensure_gpgcheck_globally_activated" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="check value of gpgcheck in /etc/zypp/zypp.conf" id="test_ensure_gpgcheck_globally_activated" version="1">
    <ind:object object_ref="object_ensure_gpgcheck_globally_activated" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_ensure_gpgcheck_globally_activated" comment="gpgcheck set in /etc/zypp/zypp.conf" version="1">
    <ind:filepath>/etc/zypp/zypp.conf</ind:filepath>
    <ind:pattern operation="pattern match">^\s*gpgcheck\s*=\s*1\s*$</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
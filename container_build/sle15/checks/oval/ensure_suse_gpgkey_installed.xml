

<def-group>
  <definition class="compliance" id="ensure_suse_gpgkey_installed" version="2">
    <metadata>
        <title>Ensure SUSE GPG Key Installed</title>
        
    <affected family="unix">
    <platform>SUSE Linux Enterprise 12</platform>
      <platform>SUSE Linux Enterprise 15</platform>
    </affected>
        <description>The Red Hat release and auxiliary key packages are required to be installed.</description>
    </metadata>
    <criteria comment="Vendor GPG keys" operator="OR">
      <criteria comment="SUSE Vendor Keys" operator="AND">
        <criteria comment="SUSE Installed" operator="OR">
          <extend_definition comment="sle15 installed" definition_ref="installed_OS_is_sle15" />
        </criteria>
        <criterion comment="package gpg-pubkey-39db7c82-5f68629b is installed"
        test_ref="test_package_gpgkey-39db7c82-5f68629b_installed" />
      </criteria>
    </criteria>
  </definition>

  <!-- First define global "object_package_gpg-pubkey" to be shared (reused) across multiple tests -->
  <linux:rpminfo_object id="object_package_gpg-pubkey" version="1">
    <linux:name>gpg-pubkey</linux:name>
  </linux:rpminfo_object>

  <!-- Perform the particular tests themselves -->
  <!-- Test for SUSE release key -->
  <linux:rpminfo_test check="only one" check_existence="at_least_one_exists"
  id="test_package_gpgkey-39db7c82-5f68629b_installed" version="1"
  comment="SUSE build key package is installed">
    <linux:object object_ref="object_package_gpg-pubkey" />
    <linux:state state_ref="state_package_gpg-pubkey-39db7c82-5f68629b" />
  </linux:rpminfo_test>

  <linux:rpminfo_state id="state_package_gpg-pubkey-39db7c82-5f68629b" version="1">
    <linux:release>5f68629b</linux:release>
    <linux:version>39db7c82</linux:version>
  </linux:rpminfo_state>

</def-group>

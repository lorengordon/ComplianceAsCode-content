



<def-group>
  <definition class="compliance" id="install_smartcard_packages"
  version="1">
    <metadata>
        <title>Install Smart Card Packages For Multifactor Authentication</title>
            <affected family="unix">
                <platform>multi_platform_sle</platform>
            </affected>
        <description>The RPM packages pam_pkcs11,mozilla-nss,mozilla-nss-tools,pcsc-ccid,pcsc-lite,pcsc-tools,opensc should be installed.</description>
    </metadata>
    <criteria operator="AND" comment="Make sure all smartcard packages are installed">

      <criterion comment="package pam_pkcs11 is installed"
      test_ref="test_package_pam_pkcs11_installed" />

      <criterion comment="package mozilla-nss is installed"
      test_ref="test_package_mozilla-nss_installed" />

      <criterion comment="package mozilla-nss-tools is installed"
      test_ref="test_package_mozilla-nss-tools_installed" />

      <criterion comment="package pcsc-ccid is installed"
      test_ref="test_package_pcsc-ccid_installed" />

      <criterion comment="package pcsc-lite is installed"
      test_ref="test_package_pcsc-lite_installed" />

      <criterion comment="package pcsc-tools is installed"
      test_ref="test_package_pcsc-tools_installed" />

      <criterion comment="package opensc is installed"
      test_ref="test_package_opensc_installed" />

    </criteria>
  </definition>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_pam_pkcs11_installed" version="1"
  comment="package pam_pkcs11 is installed">
    <linux:object object_ref="obj_test_package_pam_pkcs11_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_pam_pkcs11_installed" version="1">
    <linux:name>pam_pkcs11</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_mozilla-nss_installed" version="1"
  comment="package mozilla-nss is installed">
    <linux:object object_ref="obj_test_package_mozilla-nss_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_mozilla-nss_installed" version="1">
    <linux:name>mozilla-nss</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_mozilla-nss-tools_installed" version="1"
  comment="package mozilla-nss-tools is installed">
    <linux:object object_ref="obj_test_package_mozilla-nss-tools_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_mozilla-nss-tools_installed" version="1">
    <linux:name>mozilla-nss-tools</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_pcsc-ccid_installed" version="1"
  comment="package pcsc-ccid is installed">
    <linux:object object_ref="obj_test_package_pcsc-ccid_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_pcsc-ccid_installed" version="1">
    <linux:name>pcsc-ccid</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_pcsc-lite_installed" version="1"
  comment="package pcsc-lite is installed">
    <linux:object object_ref="obj_test_package_pcsc-lite_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_pcsc-lite_installed" version="1">
    <linux:name>pcsc-lite</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_pcsc-tools_installed" version="1"
  comment="package pcsc-tools is installed">
    <linux:object object_ref="obj_test_package_pcsc-tools_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_pcsc-tools_installed" version="1">
    <linux:name>pcsc-tools</linux:name>
  </linux:rpminfo_object>
  



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_opensc_installed" version="1"
  comment="package opensc is installed">
    <linux:object object_ref="obj_test_package_opensc_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_opensc_installed" version="1">
    <linux:name>opensc</linux:name>
  </linux:rpminfo_object>
  


</def-group>
<def-group>
  <definition class="compliance" id="package_openssh_removed"
  version="1">
    <metadata>
        <title>Remove the OpenSSH Client and Server Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package openssh should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package openssh is removed"
      test_ref="test_package_openssh_removed" />

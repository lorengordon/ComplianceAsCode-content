<def-group>
  <definition class="compliance" id="file_groupowner_etc_shadow" version="1">
   
      <metadata>
        <title>Verify Group Who Owns shadow File</title>
        
    <affected family="unix">
    <platform>Ubuntu 16.04</platform>
    </affected>
        <description>This test makes sure that /etc/shadow is group owned by 42.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /etc/shadow" test_ref="test_file_groupowner_etc_shadow_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /etc/shadow" id="test_file_groupowner_etc_shadow_0" version="1">
    <unix:object object_ref="object_file_groupowner_etc_shadow_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/shadow" id="object_file_groupowner_etc_shadow_0" version="1">
      <unix:filepath>/etc/shadow</unix:filepath>
    <filter action="exclude">symlink_file_groupowner_etc_shadow_uid_42</filter>
    <filter action="exclude">state_file_groupowner_etc_shadow_gid_42_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_etc_shadow_gid_42_0" version="1">
    <unix:group_id datatype="int">42</unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupowner_etc_shadow_uid_42" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
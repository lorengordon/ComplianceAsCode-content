<def-group>
  <definition class="compliance" id="package_mailx_installed"
  version="1">
    <metadata>
        <title>The mailx Package Is Installed</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package mailx should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package mailx is installed"
      test_ref="test_package_mailx_installed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_package_mailx_installed" version="1"
  comment="package mailx is installed">
    <linux:object object_ref="obj_test_package_mailx_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_mailx_installed" version="1">
    <linux:name>mailx</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
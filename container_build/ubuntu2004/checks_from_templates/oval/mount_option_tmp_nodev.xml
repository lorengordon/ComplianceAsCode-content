<def-group><!-- The test will check if correct option is present in both active (/proc/mounts) and
       configured (/etc/fstab) mount points. It won't fail if the mount point is not currently
       active, but will consider absence of the mount point configuration as a failure unless
       MOUNT_HAS_TO_EXIST is set to `true` (the name is a bit controversial: it means that
       the mount point has to exist in the configuration file to be checked, and we don't care
       about it if it is not configured). -->

  <definition class="compliance" id="mount_option_tmp_nodev" version="2">
    <metadata>
        <title>Add nodev Option to /tmp</title>
        
    <affected family="unix">
    <platform>Ubuntu 20.04</platform>
    </affected>
        <description>/tmp should be mounted with mount option nodev.</description>
    </metadata>
    <criteria operator="AND">
      <criteria operator="OR">
         <criterion comment="nodev on /tmp"
           test_ref="test_tmp_partition_nodev_optional"/>
         <criterion comment="/tmp does not exist"
           test_ref="test_tmp_partition_nodev_optional_exist"
           negate="true" />
      </criteria>
      <criteria operator="OR">
         <criterion comment="nodev on /tmp in /etc/fstab"
           test_ref="test_tmp_partition_nodev_optional_in_fstab"/>
    
         <criterion comment="/tmp does not exist in /etc/fstab"
           test_ref="test_tmp_partition_nodev_optional_exist_in_fstab"
           negate="true" />
    
      </criteria>
    </criteria>
  </definition>


  <linux:partition_object version="1"
    id="object_tmp_partition_nodev_optional">
    <linux:mount_point>/tmp</linux:mount_point>
  </linux:partition_object>

  <ind:textfilecontent54_object version="1"
    id="object_tmp_partition_nodev_optional_in_fstab">
    <ind:filepath>/etc/fstab</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*[\S]+[\s]+/tmp[\s]+[\S]+[\s]+([\S]+)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>


  <linux:partition_state version="1"
    id="state_tmp_partition_nodev_optional">

    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">nodev</linux:mount_options>

  </linux:partition_state>

  <ind:textfilecontent54_state version="1"
    id="state_tmp_partition_nodev_optional_in_fstab">
    <ind:instance datatype="int">1</ind:instance>

    <ind:subexpression entity_check="at least one" operation="pattern match">nodev</ind:subexpression>

  </ind:textfilecontent54_state>




  <linux:partition_test check="all" check_existence="all_exist" version="2"
    comment="nodev on /tmp "
    id="test_tmp_partition_nodev_optional">
    <linux:object object_ref="object_tmp_partition_nodev_optional"/>
    <linux:state state_ref="state_tmp_partition_nodev_optional"/>
  </linux:partition_test>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" version="1"
    comment="nodev on /tmp  in /etc/fstab"
    id="test_tmp_partition_nodev_optional_in_fstab">
    <ind:object object_ref="object_tmp_partition_nodev_optional_in_fstab" />
    <ind:state state_ref="state_tmp_partition_nodev_optional_in_fstab" />
  </ind:textfilecontent54_test>


  <linux:partition_test check="all" check_existence="all_exist" version="1"
    comment="/tmp exists"
    id="test_tmp_partition_nodev_optional_exist">
    <linux:object object_ref="object_tmp_partition_nodev_optional"/>
  </linux:partition_test>


  <ind:textfilecontent54_test check="all" check_existence="all_exist" version="1"
    comment="/tmp exists in /etc/fstab"
    id="test_tmp_partition_nodev_optional_exist_in_fstab">
    <ind:object object_ref="object_tmp_partition_nodev_optional_in_fstab" />
  </ind:textfilecontent54_test>

</def-group>
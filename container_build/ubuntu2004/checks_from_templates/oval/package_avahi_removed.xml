<def-group>
  <definition class="compliance" id="package_avahi_removed"
  version="1">
    <metadata>
        <title>Uninstall avahi Server Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package avahi-daemon should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package avahi-daemon is removed"
      test_ref="test_package_avahi-daemon_removed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="none_exist"
  id="test_package_avahi-daemon_removed" version="1"
  comment="package avahi-daemon is removed">
    <linux:object object_ref="obj_test_package_avahi-daemon_removed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_avahi-daemon_removed" version="1">
    <linux:name>avahi-daemon</linux:name>
  </linux:dpkginfo_object>

</def-group>
<def-group>
  <definition class="compliance" id="vlock_installed"
  version="1">
    <metadata>
        <title>Check that vlock is installed to allow session locking</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The DPKG package vlock should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package vlock is installed"
      test_ref="test_package_vlock_installed" />
    </criteria>
  </definition>

  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_package_vlock_installed" version="1"
  comment="package vlock is installed">
    <linux:object object_ref="obj_test_package_vlock_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_package_vlock_installed" version="1">
    <linux:name>vlock</linux:name>
  </linux:dpkginfo_object>
  

</def-group>
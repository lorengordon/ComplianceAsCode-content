<def-group>
  <definition class="compliance" id="file_groupowner_etc_issue_net" version="1">
   
      <metadata>
        <title>Verify Group Ownership of System Login Banner for Remote Connections</title>
        
    <affected family="unix">
    <platform>Ubuntu 22.04</platform>
    </affected>
        <description>This test makes sure that /etc/issue.net is group owned by 0.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /etc/issue.net" test_ref="test_file_groupowner_etc_issue_net_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /etc/issue.net" id="test_file_groupowner_etc_issue_net_0" version="1">
    <unix:object object_ref="object_file_groupowner_etc_issue_net_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/issue.net" id="object_file_groupowner_etc_issue_net_0" version="1">
      <unix:filepath>/etc/issue.net</unix:filepath>
    <filter action="exclude">symlink_file_groupowner_etc_issue_net_uid_0</filter>
    <filter action="exclude">state_file_groupowner_etc_issue_net_gid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_etc_issue_net_gid_0_0" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupowner_etc_issue_net_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>
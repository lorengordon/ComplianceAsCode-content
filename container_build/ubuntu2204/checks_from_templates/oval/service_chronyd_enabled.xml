<def-group>

  <definition class="compliance" id="service_chronyd_enabled" version="1">
    <metadata>
        <title>The Chronyd service is enabled</title>
        
    <affected family="unix">
    <platform>Ubuntu 22.04</platform>
    </affected>
        <description>The chrony service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package chrony installed and service chrony is configured to start" operator="AND">
    <criterion comment="chrony installed" test_ref="test_service_chrony_package_chrony_installed" />
      <criteria comment="service chrony is configured to start and is running" operator="AND">
        <criterion comment="chrony is running" test_ref="test_service_running_chrony" />
        <criteria operator="OR" comment="service chrony is configured to start">
          <criterion comment="multi-user.target wants chrony" test_ref="test_multi_user_wants_chrony" />
          <criterion comment="multi-user.target wants chrony socket" test_ref="test_multi_user_wants_chrony_socket" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_chrony" version="1">
    <linux:object object_ref="object_multi_user_target_for_chrony_enabled" />
    <linux:state state_ref="state_systemd_chrony_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_chrony_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_chrony_on" comment="chrony listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">chrony.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_chrony_socket" version="1">
    <linux:object object_ref="object_multi_user_target_for_chrony_socket_enabled" />
    <linux:state state_ref="state_systemd_chrony_socket_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_chrony_socket_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_chrony_socket_on" comment="chrony listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">chrony.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_running_chrony" check="at least one" check_existence="at_least_one_exists" comment="Test that the chrony service is running" version="1">
    <linux:object object_ref="obj_service_running_chrony"/>
    <linux:state state_ref="state_service_running_chrony"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_running_chrony" comment="Retrieve the ActiveState property of chrony" version="1">
    <linux:unit operation="pattern match">^chrony\.(socket|service)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_running_chrony" version="1" comment="chrony is running">
      <linux:value>active</linux:value>
  </linux:systemdunitproperty_state>



  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_service_chrony_package_chrony_installed" version="1"
  comment="package chrony is installed">
    <linux:object object_ref="obj_test_service_chrony_package_chrony_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_service_chrony_package_chrony_installed" version="1">
    <linux:name>chrony</linux:name>
  </linux:dpkginfo_object>
  

</def-group>